{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",                        // ðŸ‘ˆ enables relative root
    "paths": {
      "@/*": ["./*"],                      // ðŸ‘ˆ alias for everything in project root
      "@lib/*": ["./lib/*"]                // ðŸ‘ˆ alias specifically for lib
    },
    "types": ["node", "jest", "@testing-library/jest-dom", "@testing-library/react"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
